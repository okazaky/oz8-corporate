---
import { getCurrentLocale, getTranslations } from '../i18n/translations';

const currentPath = Astro.url.pathname;
const locale = getCurrentLocale(currentPath);
const t = getTranslations(locale);

const companyInfo = [
  { label: t.company.name, value: t.company.nameValue },
  { label: t.company.established, value: t.company.establishedValue },
  { label: t.company.representative, value: t.company.representativeValue },
  { label: t.company.location, value: t.company.locationValue },
  { label: t.company.business, value: t.company.businessValue }
];
---

<section class="py-20 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-4xl md:text-5xl font-extrabold text-center text-[#503AA8] mb-16">
      {t.company.title}
    </h2>

    <div class="max-w-4xl mx-auto">
      <div class="bg-gradient-to-br from-gray-50 to-white rounded-3xl shadow-2xl overflow-hidden border-l-4 border-[#FFEE58]">
        <table class="w-full">
          <tbody class="divide-y divide-gray-200">
            {companyInfo.map((info, index) => (
              <tr class="group hover:bg-gray-50/50 transition-colors">
                <td class="px-8 py-6 bg-gradient-to-r from-[#503AA8]/5 to-transparent font-bold text-[#503AA8] w-1/3 md:w-1/4">
                  {info.label}
                </td>
                <td class="px-8 py-6 text-gray-700 font-medium">
                  {info.value}
                </td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>
