---
import { getCurrentLocale, getTranslations } from '../i18n/translations';

const currentPath = Astro.url.pathname;
const locale = getCurrentLocale(currentPath);
const t = getTranslations(locale);
---

<section class="py-16 md:py-20 bg-[#8B7355]">
  <div class="max-w-6xl mx-auto px-6 md:px-8">
    <div class="text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">
        {t.contact.title}
      </h2>
      <p class="text-lg text-white/90 mb-10 max-w-2xl mx-auto leading-relaxed">
        {t.contact.description}
      </p>

      <div class="flex flex-col md:flex-row items-center justify-center gap-4 mb-8">
        <a
          href="mailto:ozeight@gmail.com"
          class="flex items-center gap-2 bg-white text-[#8B7355] hover:bg-gray-100 font-medium px-6 py-3 rounded-md text-base"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
          ozeight@gmail.com
        </a>

        <a
          href="tel:+819041717093"
          class="flex items-center gap-2 bg-white text-[#8B7355] hover:bg-gray-100 font-medium px-6 py-3 rounded-md text-base"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          090-4171-7093
        </a>
      </div>

      <a
        href={locale === 'en' ? '/en/contact' : '/contact'}
        class="inline-block bg-white text-[#8B7355] hover:bg-gray-100 font-medium px-10 py-3 rounded-md text-base"
      >
        {t.contact.cta}
      </a>
    </div>
  </div>
</section>
