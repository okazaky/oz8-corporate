---
import { getCurrentLocale, getTranslations } from '../i18n/translations';

const currentPath = Astro.url.pathname;
const locale = getCurrentLocale(currentPath);
const t = getTranslations(locale);
---

<section class="py-16 md:py-20">
  <div class="max-w-6xl mx-auto px-6 md:px-8">
    <h2 class="text-3xl md:text-4xl font-bold text-center text-[#333333] mb-12">
      {t.brand.title}
    </h2>

    <div class="max-w-4xl mx-auto">
      <div class="bg-white p-10 md:p-12 rounded-lg border border-gray-200">
        <div class="text-center">
          <h3 class="text-3xl md:text-4xl font-bold text-[#333333] mb-6">
            {t.brand.calmoonTitle}
          </h3>
          <p class="text-lg text-[#666666] mb-6 leading-relaxed">
            {t.brand.calmoonDesc}
          </p>
          <p class="text-base text-[#666666] mb-8">
            {t.brand.products}
          </p>
          <a
            href="https://cal-moon.com"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-block bg-[#8B7355] hover:bg-[#72593F] text-white font-medium px-8 py-3 rounded-md text-base"
          >
            {t.brand.visit} â†’
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
