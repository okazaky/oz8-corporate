---
import { getCurrentLocale, getTranslations } from '../i18n/translations';

const currentPath = Astro.url.pathname;
const locale = getCurrentLocale(currentPath);
const t = getTranslations(locale);
---

<section class="py-16 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-3xl md:text-4xl font-bold text-center text-gray-900 mb-12">
      {t.brand.title}
    </h2>

    <div class="max-w-4xl mx-auto">
      <div class="bg-gradient-to-br from-blue-50 to-purple-50 p-8 md:p-12 rounded-2xl shadow-lg">
        <div class="text-center mb-8">
          <h3 class="text-3xl font-bold text-gray-900 mb-4">
            {t.brand.calmoonTitle}
          </h3>
          <p class="text-lg text-gray-700 mb-6">
            {t.brand.calmoonDesc}
          </p>
          <p class="text-base text-gray-600 mb-8">
            {t.brand.products}
          </p>
          <a
            href="https://cal-moon.com"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-block bg-blue-600 hover:bg-blue-700 text-white font-semibold px-8 py-3 rounded-lg transition-colors duration-200 shadow-md hover:shadow-lg"
          >
            {t.brand.visit} â†’
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
