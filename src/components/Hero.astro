---
import { getCurrentLocale, getTranslations } from '../i18n/translations';

const currentPath = Astro.url.pathname;
const locale = getCurrentLocale(currentPath);
const t = getTranslations(locale);
---

<section class="py-20 md:py-32 bg-white">
  <div class="max-w-4xl mx-auto px-6 md:px-8">
    <div class="text-center">
      <h1 class="text-4xl md:text-6xl font-bold text-[#333333] mb-6 leading-tight">
        {t.hero.title}
      </h1>
      <p class="text-xl md:text-2xl text-[#666666] mb-4">
        {t.hero.subtitle}
      </p>
      <p class="text-base md:text-lg text-[#666666] mb-12 max-w-2xl mx-auto leading-relaxed">
        {t.hero.description}
      </p>
      <a
        href={locale === 'en' ? '/en/contact' : '/contact'}
        class="inline-block bg-[#8B7355] hover:bg-[#72593F] text-white font-medium px-8 py-3 rounded-md text-base"
      >
        {t.hero.cta}
      </a>
    </div>
  </div>
</section>
