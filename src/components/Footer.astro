---
import { getCurrentLocale, getTranslations, getAlternateUrl } from '../i18n/translations';

const currentPath = Astro.url.pathname;
const locale = getCurrentLocale(currentPath);
const t = getTranslations(locale);

const alternateLocale = locale === 'ja' ? 'en' : 'ja';
const alternateUrl = getAlternateUrl(currentPath, alternateLocale);
---

<footer class="bg-gray-900 text-gray-300">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- Company Info -->
      <div>
        <h3 class="text-white text-lg font-bold mb-4">
          OZ8 {locale === 'ja' ? '株式会社' : 'Corporation'}
        </h3>
        <p class="text-sm mb-2">{t.company.locationValue}</p>
        <p class="text-sm mb-2">
          <a href="mailto:ozeight@gmail.com" class="hover:text-white transition-colors">
            ozeight@gmail.com
          </a>
        </p>
        <p class="text-sm">
          <a href="tel:+819041717093" class="hover:text-white transition-colors">
            090-4171-7093
          </a>
        </p>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="text-white text-lg font-bold mb-4">
          {locale === 'ja' ? 'クイックリンク' : 'Quick Links'}
        </h3>
        <ul class="space-y-2">
          <li>
            <a href={locale === 'en' ? '/en/' : '/'} class="text-sm hover:text-white transition-colors">
              {t.nav.home}
            </a>
          </li>
          <li>
            <a href={locale === 'en' ? '/en/about' : '/about'} class="text-sm hover:text-white transition-colors">
              {t.nav.about}
            </a>
          </li>
          <li>
            <a href={locale === 'en' ? '/en/achievements' : '/achievements'} class="text-sm hover:text-white transition-colors">
              {t.nav.achievements}
            </a>
          </li>
          <li>
            <a href={locale === 'en' ? '/en/contact' : '/contact'} class="text-sm hover:text-white transition-colors">
              {t.nav.contact}
            </a>
          </li>
        </ul>
      </div>

      <!-- Brand -->
      <div>
        <h3 class="text-white text-lg font-bold mb-4">
          {locale === 'ja' ? 'ブランド' : 'Brand'}
        </h3>
        <p class="text-sm mb-3">{t.brand.calmoonTitle}</p>
        <a
          href="https://cal-moon.com"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-block text-sm text-blue-400 hover:text-blue-300 transition-colors"
        >
          {t.brand.visit} →
        </a>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="border-t border-gray-800 mt-8 pt-8 flex flex-col md:flex-row justify-between items-center">
      <p class="text-sm mb-4 md:mb-0">{t.footer.copyright}</p>
      <a
        href={alternateUrl}
        class="text-sm hover:text-white transition-colors"
      >
        {locale === 'ja' ? 'English' : '日本語'}
      </a>
    </div>
  </div>
</footer>
