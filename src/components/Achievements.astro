            <div class="flex-1">
              <h3 class="text-2xl font-bold text-[#503AA8] mb-3">
                {achievement.title}
              </h3>
              <p class="text-gray-700 leading-relaxed">
                {achievement.description}
              </p>
            </div>
          </div>
        </div>
